{
    "NAME": "NoHcalLDMX",
    "GLOBAL": {
        "FILE": "NoHcalLDMX_$process.root",
        "HIST": "h$region",
        "HIST_UP": "h$region_$syst_up",
        "HIST_DOWN": "h$region_$syst_down",
        "path": "./histograms_for_2DAlphabet_v1",
        "SIGNAME": ["Signal_M1MeV_SR","Signal_M10MeV_SR","Signal_M100MeV_SR","Signal_M1000MeV_SR"]
    },
    "REGIONS": {
        "pass": {
            "PROCESSES": ["SIGNAME"],
            "BINNING": "default"
        },
        "fail": {
            "PROCESSES": ["SIGNAME"],
            "BINNING": "default"
        }
    },
    "PROCESSES": {
        "data_obs": {
            "SYSTEMATICS":[],
            "COLOR": "black",
            "SCALE": 1,
            "TYPE": "DATA",
            "TITLE": "PNbkg_SR",
            "ALIAS": "PNbkg_SR",
            "LOC": "path/FILE:HIST"
        },
        "SIGNAME": {
            "SYSTEMATICS": [],
            "SYSTEMATICSNA":["lumi","RNN","pT","t0"],
            "COLOR": "red",
            "SCALE": 1.0,
            "TYPE": "SIGNAL",
            "TITLE": "DM Signal",
            "LOC": "path/FILE:HIST"
        }
    },
    "SYSTEMATICS": {
        "lumi": {
                "CODE": 0,
                "VAL": 1.05
        },
        "pT": {
            "ALIAS": "pTsyst",
            "UP": "path/FILE:HIST_UP",
            "DOWN": "path/FILE:HIST_DOWN",
            "SIGMA": 1.0
        },
        "t0": {
            "ALIAS": "t0syst",
            "UP": "path/FILE:HIST_UP",
            "DOWN": "path/FILE:HIST_DOWN",
            "SIGMA": 1.0
        },
        "RNN": {
            "ALIAS": "RNNsyst",
            "UP": "path/FILE:HIST_UP",
            "DOWN": "path/FILE:HIST_DOWN",
            "SIGMA": 1.0
	}
    },
    "BINNING": {
        "default": {
            "X": {
                "NAME": "pT",
                "TITLE": "p_{T}",
		"BINS": [20, 30, 46, 67, 94, 131, 180, 246, 333, 448, 601, 805],
		"SIGSTART":46,
                "SIGEND": 67,
		"NBINSna": 50,
                "MINna": 500,
                "MAXna": 5500
            },
            "Y": {
                "NAME": "N",
                "TITLE": "N",
                "NBINS": 1,
                "MIN": 0,
                "MAX": 2
            }
        }
    },
    "OPTIONS": {
        "blindedFit": ["pass"],
        "blindedPlotsNA": ["pass"],
        "plotTemplateComparisonsNA": true,
        "plotEvtsPerUnitVolt" : true
    }
}

